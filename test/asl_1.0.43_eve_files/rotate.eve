layout my_dialog {
  view dialog(name: localize("My Dialog")) {
    row() {
      column() {
        edit_number(name: 'x:', bind: @x, format: '#.##');
        edit_number(name: 'y:', bind: @y, format: '#.##');
      }
      column() {
        edit_number(name: 'a:', bind: @a, format: '#.##');
        edit_number(name: 'b:', bind: @b, format: '#.##');
      }
    }
    button (items: [
                       { name: localize("OK"), action: @ok, bind: @result, alt: 'Perform the command with the current settings' },
                       { name: localize("Reset"), action: @reset, modifiers: @opt, alt: 'Reset the dialog settings' }
                   ]);
  }
}
