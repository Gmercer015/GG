layout empty_containers
{
    view dialog(name: "Empty Containers")
    {
        column(name: "Empty")
        {
            column();

            column(name: "Empty With Name");

            tab_group(bind: @tab_group_visible)
            {
                panel(name: "Empty", value: @first);
                panel(name: "With", value: @second);
                panel(name: "Tabs", value: @third);
            }
        }

        column(name: "Minimal Stuff")
        {
            column()
            {
                static_text(name:"X");
            }

            column(name: "Empty With Name")
            {
                static_text(name:"X");
            }

            tab_group(bind: @tab_group_visible)
            {
                panel(name: "Empty", value: @first)
                {
                    static_text(name:"X");
                }
                panel(name: "With", value: @second)
                {
                    static_text(name:"X");
                }
                panel(name: "Tabs", value: @third)
                {
                    static_text(name:"X");
                }
            }
        }
    }
}
