layout alert_dialog
{
    view dialog(name: "Radio Button Color Test")
    {
        column()
        {
            radio_button(name: "Red color", color: {r:255});
            radio_button(name: "Green text color", text_color: {g:255});
            radio_button(name: "Blue interior color", interior_color: {b:255});
            radio_button(name: "SBSTYLE_3D_XBOX", style: @SBSTYLE_3D_XBOX);
            radio_button(name: "SBSTYLE_3D_CHECKBOX", style: @SBSTYLE_3D_CHECKBOX);
            radio_button(name: "SBSTYLE_3D_RADIO", style: @SBSTYLE_3D_RADIO);
            radio_button(name: "SBSTYLE_3D_BUTTON", style: @SBSTYLE_3D_BUTTON);
            radio_button(name: "SBSTYLE_3D_ROUND_BUTTON", style: @SBSTYLE_3D_ROUND_BUTTON);
        }
    }
}
